<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="/trial/{{ trial.id }}">
                Trial: {{ trial.name }}
            </a>
        </li>
        <li>
            <a href="/patient/{{ patient.pin }}">
                Patient: {{ patient.pin }}
            </a>
        </li>
        <li class="active">
            Survey: {{ survey.surveyId }}
        </li>
    </ol>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        {{ survey.name }}
                    </h4>
                    <p class="card-text">
                        Available: from {{ survey.startTime }} to {{ survey.endTime }}.
                        <br>
                        Taken: {{#if survey.userSubmissionTime}}{{ survey.userSubmissionTime }}{{else}}survey has not been taken{{/if}}.
                    </p>
                    {{#each questions}}
                        <div class="card">
                            <div class="card-block">
                                <h4 class="card-title">
                                    Question #{{ this.0.questionOrder }}
                                </h4>
                                <p class="card-text">
                                    {{ this.0.questionText }}
                                </p>
                            </div>
                            <ul class="list-group list-group-flush">
                                {{#each this}}
                                    <li class="list-group-item {{#if answered}}list-group-item-info{{/if}}">
                                        {{#if answered}}
                                            <span class="label label-default pull-xs-right">
                                                patient answer
                                            </span>
                                        {{/if}}
                                        {{ optionText }}
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
