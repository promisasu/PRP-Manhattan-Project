<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li class="active">
            Dashboard
        </li>
    </ol>
    <div class="col-lg-4 col-md-12">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Quick Actions
                </h4>
                <div class="card-block">
                    <p class="card-text">
                        You have
                        <strong>
                            {{ status.patientCount }}
                        </strong>
                        total patients.
                    </p>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
                        ADD NEW
                    </button>
                </div>
                <div class="card-block">
                    <p class="card-text">
                        You have
                        <strong>
                            {{ status.noncompliantCount }}
                        </strong>
                        total noncompliant patients.
                    </p>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#notifyModal">
                        NOTIFY
                    </button>
                    <div class="modal fade" id="notifyModal" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">
                                        <span>
                                            &times;
                                        </span>
                                        <span class="sr-only">
                                            Close
                                        </span>
                                    </button>
                                    <h4 class="modal-title">
                                        Notify Noncompliant Patients
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <div class="dropdown open">
                                                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                    Trial
                                                </button>
                                                <div class="dropdown-menu">
                                                    {{#each trials}}
                                                        <a class="dropdown-item" href="#">
                                                            <span class="label label-pill label-danger">
                                                                {{ noncompliantCount }}
                                                            </span>
                                                            {{ name }}
                                                        </a>
                                                    {{/each}}
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="#">
                                                        <span class="label label-pill label-danger">
                                                            {{ status.noncompliantCount }}
                                                        </span>
                                                        All
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="dropdown open">
                                                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                    Notification Type
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="#">
                                                        In App
                                                    </a>
                                                    <a class="dropdown-item" href="#">
                                                        Toast
                                                    </a>
                                                    <a class="dropdown-item" href="#">
                                                        Push
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                        Close
                                    </button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">
                                        Notify
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <canvas id="radarChart" width="400" height="400"></canvas>
    </div>
    <div class="col-lg-4 col-md-6">
        <div id="legend" class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Legend
                </h4>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Current Trials
                </h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    View
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    # Noncompliant
                                </th>
                                <th>
                                    Total Patients
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#unless trials.length}}
                                <tr>
                                    <td colspan="8">
                                        <div class="card card-inverse card-info text-center card-block">
                                            <div class="card-title">
                                                No Clinical Trials
                                            </div>
                                            <div class="card-text">
                                                Please contact an administrator to create a new trial.
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/unless}}
                            {{#each trials}}
                                <tr>
                                    <td>
                                        {{ name }}
                                    </td>
                                    <td>
                                        <a href="/trial/{{ id }}">
                                            View
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td>
                                        {{ status }}
                                    </td>
                                    <td>
                                        {{ noncompliantCount }}
                                    </td>
                                    <td>
                                        {{ patientCount }}
                                    </td>
                                    <td>
                                        {{ duration }}
                                    </td>
                                    <td>
                                        {{ start }}
                                    </td>
                                    <td>
                                        {{ end }}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> add-patient}}

<script>
    var data = JSON.parse('{{{ graphData }}}');
    var ctx = document.getElementById('radarChart').getContext('2d');
    var options = {
        legendTemplate: '<ul class="list-group list-group-flush"><% for (var i=0; i<datasets.length; i++){%><li class="list-group-item"><i style="color:<%=datasets[i].strokeColor%>" class="fa fa-circle"></i> <%if(datasets[i].label){%><%=datasets[i].label%><%}%></li><%}%></ul>'
    };
    var myNewChart = new Chart(ctx).Radar(data, options);
    var legend = document.getElementById('legend');

    legend.innerHTML += myNewChart.generateLegend();
</script>
